<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTheme" parent="TextAppearance.AppCompat.Large">
        <item name="android:color">#000000</item>
    </style>

    <style name="DescriptionTheme" parent="TextAppearance.AppCompat.Small">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="BigTitleTheme" parent="TitleTheme">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="PhoneNumberForceDetailTheme" parent="TextAppearance.AppCompat.Medium">
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="WebDetailForceTheme" parent="PhoneNumberForceDetailTheme">
        <item name="android:linksClickable">true</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
